{
  "$schema": "https://turborepo.org/schema.json",
  "globalEnv": [
    "CI",
    "NODE_ENV",
    "ALCHEMY_ID",
    "GITHUB_TOKEN",
    "NEXT_PUBLIC_ALCHEMY_ID",
    "SKIP_BUILD_STATIC_GENERATION"
  ],
  "globalDependencies": [
    ".eslintignore",
    ".npmrc",
    ".nvmrc",
    ".prettierignore",
    ".eslint.js",
    ".mocharc.js",
    ".prettierrc.js",
    "tsconfig.json"
  ],
  "pipeline": {
    "db:init": {
      "outputs": ["prisma/**"],
      "cache": false
    },
    "db:pull": {
      "outputs": ["prisma/**"],
      "dependsOn": ["db:init"],
      "cache": false,
      "env": ["DATABASE_URL"]
    },
    "db:generate": {
      "dependsOn": [],
      "cache": false
    },
    "db:push": {
      "cache": false
    },
    "playwright": {
      "cache": false,
      "env": ["ANVIL_BLOCK_NUMBER", "ANVIL_FORK_URL", "PLAYWRIGHT_URL", "NEXT_PUBLIC_PLAYWRIGHT_ENABLED", "CHAIN_ID"]
    },
    "test": {
      "dependsOn": ["build"],
      "outputs": ["coverage/**"],
      "env": ["ANVIL_BLOCK_NUMBER", "ANVIL_FORK_URL", "PLAYWRIGHT_URL", "NEXT_PUBLIC_PLAYWRIGHT_ENABLED", "CHAIN_ID"]
    },
    "lint": {
      "dependsOn": ["^build"],
      "outputs": []
    },
    "start": {
      "dependsOn": ["^build", "^db:generate", "generate"],
      "cache": false
    },
    "generate": {
      "outputs": [".graphclient/**", ".mesh/**", "typechain/**", "artifacts/**", "cache/**"]
    },
    "build": {
      "outputs": [
        ".vercel/**",
        ".next/**",
        ".graphclient/**",
        ".mesh/**",
        "dist/**",
        "typechain/**",
        "artifacts/**",
        "cache/**",
        "public/**",
        "storybook-static/**"
      ],
      "dependsOn": ["^db:generate", "^build", "db:generate", "generate"],
      "env": [
        "ROOT_URL",
        "ACADEMY_URL",
        "ANALYTICS_URL",
        "BLOG_URL",
        "BRIDGE_URL",
        "EARN_URL",
        "FURO_URL",
        "INTERNAL_URL",
        "KASHI_URL",
        "PARTNER_URL",
        "SWAP_URL",
        "XSWAP_URL",
        "DATABASE_URL",
        "REDIS_URL"
      ]
    },
    "clean": {
      "cache": false
    },
    "check": {
      "dependsOn": ["^db:generate", "^generate", "db:generate", "generate"],
      "cache": false
    },
    "dev": {
      "dependsOn": ["^build", "^db:generate", "generate"],
      "cache": false
    },
    "validate": {
      "cache": false
    },
    "anvil": {
      "cache": false,
      "env": ["ANVIL_BLOCK_NUMBER", "ANVIL_FORK_URL"]
    },
    "export": {
      "dependsOn": ["build"],
      "outputs": ["exports.json"],
      "cache": true
    },
    "node": {
      "dependsOn": ["^build"],
      "outputs": ["deployments/**"]
    },
    "server": {
      "dependsOn": ["^build"]
    },
    "build-blog": {
      "outputs": [".mesh/**", ".next/**", ".turbo/**", "public/**"],
      "dependsOn": ["^build", "generate"],
      "env": ["NEXT_PUBLIC_STRAPI_API_URL", "STRAPI_PREVIEW_SECRET"]
    },
    "build-furo": {
      "outputs": [".next/**", "public/**"],
      "dependsOn": ["^build", "generate"]
    },
    "build-graphql": {
      "outputs": [".graphclient/**", ".mesh/**"],
      "dependsOn": ["^build", "generate"]
    },
    "build-protocol": {
      "outputs": ["typechain/**", "artifacts/**", "cache/**"],
      "dependsOn": ["^build", "generate"]
    },
    "build-subgraph": {
      "outputs": ["build/**", "generated/**"],
      "dependsOn": ["^build", "generate"]
    }
  }
}
