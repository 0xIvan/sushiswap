{
  "$schema": "https://turbo.build/schema.json",
  "globalEnv": [
    "CI",
    "NODE_ENV",
    "ALCHEMY_ID",
    "GITHUB_TOKEN",
    "NEXT_PUBLIC_ALCHEMY_ID",
    "SKIP_BUILD_STATIC_GENERATION"
  ],
  "globalDependencies": [
    ".eslintignore",
    ".eslint.js",
    ".npmrc",
    ".nvmrc",
    ".prettierignore",
    ".prettierrc.js",
    "tsconfig.json"
  ],
  "pipeline": {
    "playwright": {
      "cache": false,
      "env": ["ANVIL_BLOCK_NUMBER", "ANVIL_FORK_URL", "PLAYWRIGHT_URL", "NEXT_PUBLIC_PLAYWRIGHT_ENABLED", "CHAIN_ID"]
    },
    "test": {
      "dependsOn": ["build"],
      "outputs": ["coverage/**/*"],
      "env": ["ANVIL_BLOCK_NUMBER", "ANVIL_FORK_URL", "PLAYWRIGHT_URL", "NEXT_PUBLIC_PLAYWRIGHT_ENABLED", "CHAIN_ID"]
    },
    "test-e2e-playwright": {
      "cache": false,
      "env": ["ANVIL_BLOCK_NUMBER", "ANVIL_FORK_URL", "PLAYWRIGHT_URL", "NEXT_PUBLIC_PLAYWRIGHT_ENABLED", "CHAIN_ID"]
    },
    "blog#build": {
      "dependsOn": ["^build", "generate"],
      "env": [
        "STRAPI_PREVIEW_SECRET"
      ],
      "outputs": [
        ".mesh/**/*", 
        ".next/**/*", 
        "public/**/*"
      ]
    },
    "lint": {
      "dependsOn": ["^build"],
      "outputs": []
    },
    "start": {
      "dependsOn": [
        "build"
      ],
      "cache": false,
      "persistent": true
    },
    "generate": {
      "outputs": [
        ".graphclient/**/*", 
        ".mesh/**/*", 
        "typechain/**/*",
        "artifacts/**/*"
      ],
      "cache": false
    },
    "build": {
      "outputs": [
        ".next/**/*",
        ".vercel/**/*",
        "dist/**/*",
        "typechain/**/*",
        "artifacts/**/*",
        "public/**/*",
        "storybook-static/**/*"
      ],
      "dependsOn": [
        "^generate",
        "^build",
        "^export",
        "generate"
      ],
      "env": [
        "ROOT_URL",
        "ACADEMY_URL",
        "ANALYTICS_URL",
        "BLOG_URL",
        "BRIDGE_URL",
        "EARN_URL",
        "FURO_URL",
        "INTERNAL_URL",
        "KASHI_URL",
        "PARTNER_URL",
        "SWAP_URL",
        "XSWAP_URL",
        "DATABASE_URL",
        "EARN_DATABASE_URL",
        "REDIS_URL"
      ]
    },
    "clean": {
      "cache": false
    },
    "check": {
      "dependsOn": ["build"],
      "cache": false
    },
    "dev": {
      "dependsOn": ["^build"],
      "cache": false,
      "persistent": true
    },
    "anvil": {
      "cache": false,
      "env": ["ANVIL_BLOCK_NUMBER", "ANVIL_FORK_URL"],
      "persistent": true
    },
    "export": {
      "dependsOn": ["build"],
      "outputs": ["exports/**/*"],
      "cache": true
    },
    "node": {
      "dependsOn": ["build"],
      "outputs": ["deployments/**/*"],
      "persistent": true
    },
    "server": {
      "persistent": true,
      "dependsOn": ["build"]
    },
    "validate": {
      "cache": false
    }
  }
}
