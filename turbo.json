{
  "$schema": "https://turbo.build/schema.json",
  "globalEnv": [
    "CI",
    "APP_ENV",
    "NODE_ENV",
    "GITHUB_TOKEN",
    "DEBUG"
  ],
  "globalDependencies": [
    ".eslintignore",
    ".eslint.js",
    ".npmrc",
    ".nvmrc",
    ".prettierignore",
    ".prettierrc.js",
    "tsconfig.json"
  ],
  "pipeline": {
    "anvil": {
      "cache": false,
      "env": [
        "ANVIL_BLOCK_NUMBER", 
        "ANVIL_FORK_URL",
        "ANVIL_PORT"
      ],
      "persistent": true
    },
    "build": {
      "outputs": [
        ".next/**/*",
        "!.next/cache/**",
        ".vercel/**/*",
        "dist/**/*"
      ],
      "dependsOn": [
        "^build", 
        "generate"
      ],
      "env": [
        "ALCHEMY_ID",
        "DATABASE_URL",
        "REDIS_URL",
        "POOLS_API_V0_BASE_URL",
        "TOKENS_API_V0_BASE_URL",
        "SWAP_API_V0_BASE_URL",
        "TOKEN_LIST_PR_WEBHOOK_URL",
        "OCTOKIT_KEY",
        "NEXT_PUBLIC_STRAPI_API_URL"
      ]
    },
    "clean": {
      "cache": false
    },
    "check": {
      "dependsOn": [
        "^build"
      ],
      "cache": false
    },
    "dev": {
      "dependsOn": [
        "^build", 
        "generate",
        "export"
      ],
      "cache": false,
      "persistent": true
    },
    "generate": {
      "outputs": [
        ".graphclient/**/*",
        "src/generated.ts",
        "typechain"
      ],
      "cache": false
    },
    "lint": {
      "dependsOn": ["^build"],
      "outputs": []
    },
    "start": {
      "dependsOn": [        
        "^build", 
        "generate",
        "export"
      ],
      "env": [
        "APP_ENV",
        "TEST",
        "ALCHEMY_ID",
        "DATABASE_URL",
        "REDIS_URL",
        "POOLS_API_V0_BASE_URL",
        "TOKENS_API_V0_BASE_URL",
        "SWAP_API_V0_BASE_URL",
        "NEXT_PUBLIC_STRAPI_API_URL"
      ],
      "cache": false,
      "persistent": true
    },
    "test": {
      "dependsOn": ["build"],
      "outputs": ["coverage/**/*"],
      "env": []
    },
    "validate": {
      "cache": true
    },
    "export": {
      "cache": true
    }
  }
}
