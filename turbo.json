{
  "$schema": "https://turborepo.org/schema.json",
  "globalEnv": [
    "ALCHEMY_ID", 
    "GITHUB_TOKEN",
    "INFURA_ID",
    "NEXT_PUBLIC_ALCHEMY_ID", 
    "NEXT_PUBLIC_INFURA_ID",
    "NODE_ENV"
  ],
  "globalDependencies": [
    ".eslint.js",
    ".eslintignore",
    ".mocharc.js",
    ".npmrc",
    ".nvmrc",
    ".prettierignore",
    ".prettierrc.js",
    "tsconfig.json"
  ],
  "pipeline": {
    "furo:build": {
      "outputs": [
        ".next/**",
        "public/**"
      ],
      "dependsOn": [
        "^build",
        "generate"
      ]
    },
    "db:init": {
      "outputs": [
        "prisma/**"
      ],
      "cache": false
    },
    "db:pull": {
      "outputs": [
        "prisma/**"
      ],
      "dependsOn": [
        "db:init"
      ],
      "cache": false,
      "env": [
        "DATABASE_URL"
      ]
    },
    "db:generate": {
      "dependsOn": [
        "db:pull"
      ],
      "cache": false
    },
    "db:push": {
      "cache": false
    },
    "playwright": {
      "cache": false,
      "env": [
        "ANVIL_BLOCK_NUMBER",
        "ANVIL_FORK_URL",
        "PLAYWRIGHT_URL",
        "NEXT_PUBLIC_PLAYWRIGHT_ENABLED",
        "CHAIN_ID"
      ]
    },
    "test": {
      "dependsOn": [
        "build"
      ],
      "outputs": [
        "coverage/**"
      ],
      "env": [
        "ANVIL_BLOCK_NUMBER",
        "ANVIL_FORK_URL",
        "PLAYWRIGHT_URL",
        "NEXT_PUBLIC_PLAYWRIGHT_ENABLED",
        "CHAIN_ID"
      ]
    },
    "lint": {
      "dependsOn": [
        "^build"
      ],
      "outputs": []
    },
    "start": {
      "dependsOn": [
        "^build",
        "^db:generate",
        "generate"
      ],
      "cache": false
    },
    "generate": {
      "outputs": [
        ".graphclient/**",
        ".mesh/**",
        "typechain/**",
        "artifacts/**",
        "cache/**"
      ]
    },
    "build": {
      "outputs": [
        ".vercel/**",
        ".next/**",
        ".graphclient/**",
        ".mesh/**",
        "dist/**",
        "typechain/**",
        "artifacts/**",
        "cache/**",
        "public/**",
        "storybook-static/**"
      ],
      "dependsOn": [
        "^build",
        "generate"
      ],
      "env": [
        "ROOT_URL",
        "ACADEMY_URL",
        "ANALYTICS_URL",
        "BLOG_URL",
        "BRIDGE_URL",
        "EARN_URL",
        "FURO_URL",
        "INTERNAL_URL",
        "KASHI_URL",
        "PARTNER_URL",
        "SWAP_URL",
        "XSWAP_URL",
        "DATABASE_URL",
        "REDIS_URL"
      ]
    },
    "clean": {
      "cache": false
    },
    "check": {
      "cache": false
    },
    "dev": {
      "dependsOn": [
        "^build",
        "^db:generate",
        "generate"
      ],
      "cache": false
    },
    "validate": {
      "cache": false
    },
    "anvil": {
      "cache": false,
      "env": [
        "ANVIL_BLOCK_NUMBER",
        "ANVIL_FORK_URL"
      ]
    },
    "export": {
      "dependsOn": [
        "build"
      ],
      "outputs": [
        "exports.json"
      ],
      "cache": true
    },
    "node": {
      "dependsOn": [
        "^build"
      ],
      "outputs": [
        "deployments/**"
      ]
    },
    "server": {
      "dependsOn": [
        "^build"
      ]
    }
  }
}
