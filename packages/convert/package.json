    "@sushiswap/prettier-config": "workspace:*",
    "@sushiswap/typescript-config": "workspace:*",
    "@types/jest": "^29.2.0",
    "eslint": "8.29.0",
    "jest": "29.3.1",
    "typescript": "4.9.4"
  },
  "peerDependencies": {
    "@sushiswap/currency": "*"
  },
  "peerDependenciesMeta": {
    "@sushiswap/currency": {
      "optional": false
    }
