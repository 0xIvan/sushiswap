{
  "name": "@sushiswap/convert",
  "version": "0.1.1",
  "description": "Sushi Convert",
  "keywords": [
    "sushi",
    "convert"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/sushiswap/sushiswap.git",
    "directory": "packages/convert"
  },
  "license": "MIT",
  "author": "Matthew Lilley <hello@matthewLilley.com>",
  "files": [
    "dist"
  ],
  "main": "dist/index.js",
  "source": "src/index.ts",
  "types": "dist/index.d.ts",
  "sideEffects": false,
  "scripts": {
    "build": "tsc",
