{
  "extends": "@sushiswap/typescript-config/esm.json",
  "include": [
    "lib", 
    "resolvers",
    "transformers"
  ],
  "exclude": ["node_modules"],
  "compilerOptions": {
    "baseUrl": ".",
    "rootDir": ".",
    "lib": ["ESNext"],
    "module": "ESNext",
    "moduleResolution": "nodenext",
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "downlevelIteration": true,
    "allowSyntheticDefaultImports": true,
    "skipLibCheck": true
  },
  "ts-node": {
    "swc": true,
    "esm": true
  }
}