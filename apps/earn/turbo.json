{
  "extends": ["//"],
  "pipeline": {
    "build": {
      "outputs": [".next/**"],
      "dependsOn": ["^build"],
      "env": ["ALCHEMY_ID", "STRAPI_API_URL", "STRAPI_PREVIEW_SECRET"],
      "cache": true
    },
    "check": {
      "dependsOn": ["^build"],
      "cache": true
    },
    "sitemap": {
      "outputs": ["public/sitemap.xml", "public/sitemap-*.xml", "public/robots.txt"],
      "dependsOn": ["build"],
      "cache": true
    }
  }
}
